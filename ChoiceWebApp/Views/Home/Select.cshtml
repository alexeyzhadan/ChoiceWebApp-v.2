@model StudDiscViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>@Model.Student.Name</h1>
    <h4>@Model.Student.Group</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Selected[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Selected[0].Annotation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Selected[0].Teacher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Selected)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Annotation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.Name)
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="select-disc" type="checkbox" name="selectedDiscId" value="@item.Id" checked />
                        </div>
                    </td>
                </tr>
            }
            @foreach (var item in Model.NoSelected)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Annotation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.Name)
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="select-disc" type="checkbox" name="selectedDiscId" value="@item.Id" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/select.js" type="text/javascript" charset="utf-8"></script>
}